}

entity "comments" as comments {
  *comment_id : INT <<PK>>
  --
  content : TEXT
}

entity "favorites" as favorites {
  *favorite_id : INT <<PK>>
  --
  favorite_date : DATE
}

entity "opinions" as opinions {
  *opinion_id : INT <<PK>>
  --
  opinion : BOOLEAN
}

entity "tag_lookup" as tag_lookup {
  *tag_id : INT <<PK>>
